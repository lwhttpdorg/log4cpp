{
	"appenders": {
		"console": {
			"out-stream": "stdout"
		},
		"file": {
			"file-path": "log/log4cpp.log"
		},
		"socket": {
			"host": "0.0.0.0",
			"port": 9443,
			"prefer-stack": "AUTO",
			"protocol": "UDP"
		}
	},
	"log-pattern": "${NM}: ${yyyy}-${MM}-${dd} ${HH}:${mm}:${ss}:${ms} [${8TN}] [${L}] -- ${W}",
	"loggers": [
		{
			"name": "root",
			"level": "INFO",
			"appenders": [
				"console",
				"file"
			]
		},
		{
			"name": "hello",
			"level": "INFO",
			"appenders": [
				"console",
				"file"
			]
		},
		{
			"name": "world",
			"level": "WARN",
			"appenders": [
				"console",
				"file"
			]
		}
	]
}