{
	"logger_pattern": "${NM}: ${yyyy}-${MM}-${dd} ${HH}:${mm}:${ss}:${ms} [${8TN}] [${L}] -- ${W}",
	"appenders": {
		"console_appender": {
			"out_stream": "stdout"
		},
		"file_appender": {
			"file_path": "log/log4cpp.log"
		},
		"tcp_appender": {
			"local_addr": "0.0.0.0",
			"port": 9443
		},
		"udp_appender": {
			"local_addr": "0.0.0.0",
			"port": 9443
		}
	},
	"loggers": [
		{
			"name": "console_logger",
			"log_level": "INFO",
			"appenders": [
				"console_appender",
				"tcp_appender",
				"udp_appender"
			]
		},
		{
			"name": "file_logger",
			"log_level": "WARN",
			"appenders": [
				"file_appender"
			]
		}
	],
	"root_logger": {
		"log_level": "INFO",
		"appenders": [
			"console_appender",
			"file_appender",
			"tcp_appender",
			"udp_appender"
		]
	}
}